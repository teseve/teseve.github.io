// imports
@import "kouto-swiss"

// resets
meyer-reset()
box-sizing-reset()

// fonts
font-face( "Glyphs", "./fonts/webhostinghub/webhostinghub-glyphs-webfont", formats: eot svg ttf )
Glyphs = "Glyphs"
font-face( "FiraSans", "./fonts/firasans/FiraSans-Book", formats: eot woff )
font-face( "FiraSans", "./fonts/firasans/FiraSans-Bold", bold, formats: eot woff )
font-face( "FiraSans", "./fonts/firasans/FiraSans-ExtraLight", 100, formats: eot woff )
light = 100
FiraSans = "FiraSans", font-stack( "Helvetica" )

// vars
darkColor = #333
lightColor = #eee
linkColor = #9b99ff
mainColor = #f76b1c

// ----- commons

sup
    vertical-align super

a
    color linkColor
    text-decoration none

// ----- layout

html
    font normal 62.5%/1.33 FiraSans
    -webkit-font-smoothing antialiased
    -webkit-text-size-adjust 100%

body
    color lightColor

header
    padding 5rem 0 18rem
    background white url( ./img/header-bcg.png ) center repeat
    box-shadow 0 0 1rem black
    h1
        position relative
        margin 0
        color white
        text-shadow 0 0 .6rem mainColor
        &:before
            content ""
            position relative
            display block
            size 12.8rem
            margin 0 auto 1.6rem
            z-index 10
            background transparent url( ./img/icon.png ) center no-repeat
            background-size contain
        &:after
            content ""
            display block
            position absolute
            size 12.8rem
            top 0
            left 50%
            z-index 5
            transform translateX( -50% )
            background transparent
            border-radius 100%
            box-shadow 0 0 .6rem mainColor
        strong
            display block
            font light 6rem/1 FiraSans
            text-align center
        span
            display block
            font bold 1.6rem/1.25 FiraSans
            text-align center

.screenshot
    margin 0 auto -10rem
    background darkColor
    figure
        position relative
        max-width 90%
        top -14rem
        margin 0 auto
        img
            display block
            width 100%
            max-width 64rem
            box-shadow 0 0 2rem rgba( black, .25 )

.links
    margin 0 auto
    padding 0 0 4rem
    background darkColor
    h2
        max-width 90%
        margin 0 auto 2.4rem
        text-align center
        strong
            display block
            margin 0 auto .4rem
            font light 2.4rem/1 FiraSans
        span
            display block
            font light 1.6rem/1.33 FiraSans
            sup
                font-size .75em
        a
            display block
            font normal 1.2rem/1.33 FiraSans
            text-decoration none
            &:before
                content "("
            &:after
                content ")"
    ul
        max-width 90%
        margin 0 auto
        li a
            display block
            padding 1.6rem 0
            border 1px solid rgba( lightColor, .5 )
            border-radius .6rem
            color lightColor
            text-decoration none
            text-align center
            i
                display block
                margin 0 auto .8rem
                font normal 4.8rem/1 Glyphs
            strong
                display block
                margin 0 auto .8rem
                font light 1.6rem/1.33 FiraSans
            span
                display inline-block
                padding .6rem 1.2rem
                background mainColor
                border-radius .6rem
                font normal 1.6rem/1.33 FiraSans
                color lightColor
            &.win
            &.osx
                display none
            &.github
                i:before
                    content ""

.what
    padding .1rem 0 2rem
    background lightColor
    h2
        max-width 90%
        margin 3rem auto 2.4rem
        font light 2.4rem/1 FiraSans
        color darkColor
        text-align center
    p
        max-width 90%
        margin 0 auto 1.4rem
        font normal 1.4rem/1.33 FiraSans
        color darkColor

footer
    padding .75rem 0 .5rem
    background white url( ./img/header-bcg.png ) center repeat
    box-shadow 0 0 1rem black
    nav
        display none
    .cc
        max-width 90%
        margin 0 auto
        font bold 1.4rem/1.25 FiraSans
        text-shadow 0 0 .6rem mainColor
        text-align right
        .love
            &:before
                content ""
                font normal 1.4rem/1.25 Glyphs
                vertical-align -.2rem
            font-size 0
        a
            color mainColor
